<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
  
<%= form_with model: @event, method: :post do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    
    <div class="form-group">
      <%= form.label :start_time %>
      <%= form.datetime_select :start_time %>
    </div>
    
    <div class="content" %>
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    
    <div class="submit">
      <%= form.submit %>
    </div>
  <% end %>
    </div>
  </div>
</div>