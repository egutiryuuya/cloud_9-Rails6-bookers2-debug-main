<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <thead>
    <th></th>
    <th>Name</th>
    <th>Introduction</th>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image,size:'100x100' %></td>
          <td><%= link_to user_path(user) do %>
              <%=user.name%>
              <% end %></td>
          <td><%= link_to user_path(user) do %>
              <%= user.introduction %>
              <% end %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <thead>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to(book.user) do %>
              <%= image_tag book.user.get_profile_image, size:'50x50' %>
              <% end %>
          </td>
          <td><%=link_to book_path(book) do %>
              <%=book.title %>
              <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>