<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= render "users/info",user: @user %>
        </div>
        <div class="col-md-8 offset-md-1">
                <h1>Group Detail</h1>
            <table class ="table">
                <tr>
                    <th><%= image_tag @group.get_group_image,size: '50x50'  %></th>
                    <th><%= @group.name %></th>
                    <th><%= @group.introduction %></th>
                    <% if @group.owner_id==current_user.id %>
                        <th><%= link_to "Edit",edit_group_path(@group),class: "btn btn-success"%></th>
                    <% end %>
                </tr>
            </table>
        </div>
    </div>
</div>